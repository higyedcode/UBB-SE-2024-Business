@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{
	ViewData["Title"] = "Index";
	Layout = "_UserLayout";
}

@model IEnumerable<Celebration_Of_Capitalism___The_Finale.Models.Product>

@if(HttpContextAccessor.HttpContext.Session.Keys.Contains("userID"))
{
    <div>
        <div class="d-flex flex-row justify-content-center">
            @foreach (var item in Model)
            {
                <div class="border border-primary p-2">
                    <a asp-controller="Product" asp-action="Index" asp-route-id="@item.Id">@item.Name</a>
                    <p>@item.Category</p>
                </div>
            }
        </div>
    </div>
}
else
{
    Layout = "_Layout";
    <div>
        PERISH, CRIMINAL SCUM, GET HIT BY THE 403.
    </div>
}