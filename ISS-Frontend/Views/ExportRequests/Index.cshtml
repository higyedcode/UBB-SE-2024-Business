@model IEnumerable<ISS_Frontend.Models.ExportRequest>

@{
    ViewData["Title"] = "ExportRequests";
}

<h1>Export Requests</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                Advertisement Statistics ID
            </th>
            <th>
                User ID
            </th>
            <th>
                Font Size
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var exportRequest in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => exportRequest.AdvertisementStatisticsId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => exportRequest.UserId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => exportRequest.FontSize)
                </td>
                <!-- Add more columns as needed -->
                <td>
                    <a asp-action="Details" asp-route-id="@exportRequest.Id">Details</a> |
                    <a asp-action="Edit" asp-route-id="@exportRequest.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@exportRequest.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
